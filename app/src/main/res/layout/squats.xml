<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<Space
			android:layout_width="50dp"
			android:layout_height="20px"
			android:layout_column="0"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Łącznie"
			android:id="@+id/label_inclusive"
			android:layout_column="3"
			android:textAlignment="gravity"
			android:gravity="center_vertical|center_horizontal"/>
	</TableRow>

	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Czas"
			android:id="@+id/label_time"
			android:layout_column="1"/>

		<Space
			android:layout_width="20px"
			android:layout_height="20px"
			android:layout_column="2"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="0"
			android:id="@+id/txt_time"
			android:layout_column="3"
			android:gravity="right"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="h"
			android:id="@+id/label_time_unit"
			android:layout_column="4"/>
	</TableRow>

	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Przysiadów"
			android:id="@+id/label_squat_count"
			android:layout_column="1"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="0"
			android:id="@+id/txt_squat_count"
			android:layout_column="3"
			android:textStyle="bold"
			android:gravity="right"/>

	</TableRow>

	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Seria"
			android:id="@+id/label_succession"
			android:layout_column="3"
			android:gravity="left"
			android:textAlignment="gravity"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="0"
			android:id="@+id/txt_succession"
			android:layout_column="4"/>
	</TableRow>

	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Czas"
			android:id="@+id/label_succession_time"
			android:layout_column="1"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="0"
			android:id="@+id/txt_succession_time"
			android:layout_column="3"
			android:gravity="right"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="h"
			android:id="@+id/label_succession_time_unit"
			android:layout_column="4"/>
	</TableRow>

	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Przysiadów"
			android:id="@+id/label_succession_squat_count"
			android:layout_column="1"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="0"
			android:id="@+id/txt_succession_squat_count"
			android:layout_column="3"
			android:gravity="right"/>

	</TableRow>
</TableLayout>